{
  "name": "@thepia/flows.thepia.net",
  "type": "module",
  "version": "0.0.1",
  "description": "Public demo website for Thepia Flows with live database integration and passkey authentication",
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build",
    "build:watch": "astro build --watch",
    "preview": "astro preview",
    "astro": "astro",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "typecheck": "astro check",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "demo:setup": "echo 'Setting up demo environment...'",
    "demo:start": "pnpm dev",
    "demo:reset": "echo 'Resetting demo state...'",
    "deploy:preview": "echo 'Deploying to GitHub Pages...'",
    "deploy:production": "echo 'Deploying to Bunny CDN...'",
    "setup:https": "./scripts/setup-https.sh",
    "setup:letsencrypt": "./scripts/setup-letsencrypt-dev.sh",
    "install:with-env": "set -a && [ -f .env ] && . ./.env && set +a && pnpm install"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/svelte": "^5.7.3",
    "@aws-sdk/client-ses": "^3.844.0",
    "@supabase/supabase-js": "^2.50.5",
    "@tailwindcss/vite": "^4.1.10",
    "@thepia/branding": "file:../branding",
    "@thepia/flows-auth": "file:../flows-auth",
    "astro": "^4.16.18",
    "bits-ui": "^2.8.11",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.525.0",
    "shadcn-svelte": "^1.0.6",
    "svelte": "^4.2.19",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/svelte": "^4.1.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "svelte-check": "^4.2.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
