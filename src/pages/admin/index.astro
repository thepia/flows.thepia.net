---
import AdminApp from '../../components/admin/AdminApp.svelte';
import FloatingSupportButton from '../../components/debug/FloatingSupportButton.svelte';
import Layout from '../../layouts/Layout.astro';

// Page metadata
const title = 'Admin Dashboard - Thepia Flows';
const description = 'Administrative interface for managing demo invitations and user permissions.';
---

<Layout title={title} description={description}>
