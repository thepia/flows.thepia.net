---
// Footer component for flows.thepia.net
import { Image } from 'astro:assets';
import logoSquare from '@thepia/branding/assets/logo-square.png';
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <div class="flex items-center mb-4">
          <Image
            src={logoSquare}
            alt="Thepia"
            width={32}
            height={32}
            class="mr-3"
          />
          <span class="text-xl font-serif">Thepia Flows</span>
        </div>
        <p class="text-gray-400 mb-4 max-w-md">
          Custom workflow applications for personal devices. Privacy-compliant, mobile-optimized, and designed for seamless workplace processes.
        </p>
        <div class="flex space-x-4">
          <a href="https://thepia.com" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">Thepia Website</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.083 9h1.946c.089-1.546.383-2.97.837-4.118A6.004 6.004 0 004.083 9zM10 2a8 8 0 100 16 8 8 0 000-16zm0 2c-.076 0-.232.032-.465.262-.238.234-.497.623-.737 1.182-.389.907-.673 2.142-.766 3.556h3.936c-.093-1.414-.377-2.649-.766-3.556-.24-.559-.499-.948-.737-1.182C10.232 4.032 10.076 4 10 4zm3.971 5c-.089-1.546-.383-2.97-.837-4.118A6.004 6.004 0 0115.917 9h-1.946zm-2.003 2H8.032c.093 1.414.377 2.649.766 3.556.24.559.499.948.737 1.182.233.23.389.262.465.262.076 0 .232-.032.465-.262.238-.234.497-.623.737-1.182.389-.907.673-2.142.766-3.556zm1.166 4.118c.454-1.147.748-2.572.837-4.118h1.946a6.004 6.004 0 01-2.783 4.118zm-6.268 0C6.412 13.97 6.118 12.546 6.03 11H4.083a6.004 6.004 0 002.783 4.118z" clip-rule="evenodd"></path>
            </svg>
          </a>
          <a href="https://github.com/thepia" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">GitHub</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-300 tracking-wider uppercase mb-4">Product</h3>
        <ul class="space-y-2">
          <li><a href="#how-it-works" class="text-gray-400 hover:text-white transition-colors">How It Works</a></li>
          <li><a href="#features" class="text-gray-400 hover:text-white transition-colors">Features</a></li>
          <li><a href="https://thepia.com/flows" class="text-gray-400 hover:text-white transition-colors">Documentation</a></li>
          <li><a href="https://thepia.com/#contact" class="text-gray-400 hover:text-white transition-colors">Contact Sales</a></li>
        </ul>
      </div>
      
      <!-- Company Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-300 tracking-wider uppercase mb-4">Company</h3>
        <ul class="space-y-2">
          <li><a href="https://thepia.com/#about" class="text-gray-400 hover:text-white transition-colors">About</a></li>
          <li><a href="https://thepia.com/privacy" class="text-gray-400 hover:text-white transition-colors">Privacy</a></li>
          <li><a href="https://thepia.com/terms" class="text-gray-400 hover:text-white transition-colors">Terms</a></li>
          <li><a href="https://thepia.com/#research" class="text-gray-400 hover:text-white transition-colors">Research</a></li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400 text-sm">
        Â© {new Date().getFullYear()} Thepia. All rights reserved.
      </p>

      <!-- Theme Toggle and Built With -->
      <div class="flex items-center space-x-4 mt-2 md:mt-0">
        <!-- Dark Mode Toggle -->
        <button
          id="theme-toggle-footer"
          class="theme-toggle p-2 text-gray-400 hover:text-white transition-colors duration-200 focus:outline-none rounded-full"
          style="transition: all 0.2s ease-in-out;"
          aria-label="Toggle dark mode"
        >
          <!-- Sun icon for dark mode -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hidden dark:block">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
          </svg>

          <!-- Moon icon for light mode -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 block dark:hidden">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.72 9.72 0 0 1 18 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 0 0 3 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 0 0 9.002-5.998Z" />
          </svg>
        </button>

        <p class="text-gray-400 text-sm">
          Built with privacy-first principles
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  // Dark mode toggle functionality
  const themeToggleFooter = document.getElementById('theme-toggle-footer');

  function toggleDarkMode() {
    const isDark = document.documentElement.classList.contains('dark');

    if (isDark) {
      document.documentElement.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      document.documentElement.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
  }

  if (themeToggleFooter) {
    themeToggleFooter.addEventListener('click', toggleDarkMode);
  }
</script>

<style>
  .theme-toggle:hover {
    background-color: rgba(31, 41, 55, 0.8);
  }

  .theme-toggle:focus {
    outline: none;
    box-shadow: 0 0 0 2px var(--color-brand-primary, #988ACA);
  }

  .theme-toggle svg {
    transition: transform 0.2s ease-in-out;
  }

  .theme-toggle:hover svg {
    transform: scale(1.1);
  }
</style>
