---
// HowItWorks component - Based on thepia.com/flows patterns
import CodingIllustration from '../../assets/illustrations/Coding_Monochromatic.svg?raw';
import GroupPresentationIllustration from '../../assets/illustrations/Group_Presentation_Monochromatic.svg?raw';
import AnalysisIllustration from '../../assets/illustrations/Analysis_Monochromatic.svg?raw';
---

<section id="how-it-works" class="py-section">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <!-- Content Side -->
      <div>
        <h2 class="text-3xl md:text-4xl font-serif mb-8">How It Works</h2>
        <div class="space-y-8">
          <!-- Step 1 -->
          <div class="flex items-start">
            <div class="step-indicator mr-4">1</div>
            <div>
              <h3 class="text-xl font-medium mb-3">Provide Your Process Documentation</h3>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                Share your existing workflow documentation. We analyze your process requirements and identify opportunities for mobile optimization.
              </p>
            </div>
          </div>
          
          <!-- Step 2 -->
          <div class="flex items-start">
            <div class="step-indicator mr-4">2</div>
            <div>
              <h3 class="text-xl font-medium mb-3">Custom App Development</h3>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                We build a tailored Svelte application optimized for your specific workflow, with camera integration and visual documentation features.
              </p>
            </div>
          </div>
          
          <!-- Step 3 -->
          <div class="flex items-start">
            <div class="step-indicator mr-4">3</div>
            <div>
              <h3 class="text-xl font-medium mb-3">Deploy & Monitor</h3>
              <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                Your workflow app is deployed to employee devices with real-time monitoring, analytics, and continuous optimization support.
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Visual Side -->
      <div class="relative">
        <!-- Step Illustrations -->
        <div class="space-y-8">
          <!-- Step 1 Illustration -->
          <div class="bg-gradient-to-br from-primary/10 to-purple-600/10 rounded-2xl p-6 text-center">
            <div class="w-24 h-24 mx-auto mb-4">
              <div
                class="w-full h-full"
                set:html={CodingIllustration}
                aria-label="Workflow development and coding illustration"
              />
            </div>
            <h4 class="font-medium text-lg mb-2">Build Your Workflow</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Custom development tailored to your process</p>
          </div>

          <!-- Step 2 Illustration -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 text-center">
            <div class="w-24 h-24 mx-auto mb-4">
              <div
                class="w-full h-full"
                set:html={GroupPresentationIllustration}
                aria-label="Team training and presentation illustration"
              />
            </div>
            <h4 class="font-medium text-lg mb-2">Train Your Team</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Onboard employees with guided workflows</p>
          </div>

          <!-- Step 3 Illustration -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-100 dark:from-green-900/20 dark:to-emerald-900/20 rounded-2xl p-6 text-center">
            <div class="w-24 h-24 mx-auto mb-4">
              <div
                class="w-full h-full"
                set:html={AnalysisIllustration}
                aria-label="Data analysis and insights illustration"
              />
            </div>
            <h4 class="font-medium text-lg mb-2">Analyze Results</h4>
            <p class="text-sm text-gray-600 dark:text-gray-400">Monitor performance and optimize processes</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
